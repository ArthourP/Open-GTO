stock pickup_OnGameModeInit()
{
	for (new i = 0; i < sizeof(pickups_Array); i++) {
		CreatePickup(pickups_Array[i][pickup_Model], 1, pickups_Array[i][pickup_X], pickups_Array[i][pickup_Y], pickups_Array[i][pickup_Z], pickups_Array[i][pickup_World]);
	}
	return 1;
}

stock pickup_OnPlayerPickUpPickup(playerid, pickupid)
{
	switch (GetPickupModel(pickupid)) {
		// armour
		case 1242: {
			SetPlayerArmour(playerid, 100);
		}
		// parachute
		case 371: {
			GivePlayerWeapon(playerid, 46, 1);
		}
		// health
		case 1240: {
			SetPlayerMaxHealth(playerid);
		}
	}
	switch (GetPickupModel(pickupid)) {
		case 1242, 371, 1240: {
			PlayerPlaySoundOnPlayer(playerid, 1150);
			DestroyPickup(pickupid);
		}
	}
	return 1;
}